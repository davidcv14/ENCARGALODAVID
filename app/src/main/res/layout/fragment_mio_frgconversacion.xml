<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/activity_margin"
    tools:context=".tendero.Inicio_sesion.ui.Mis_ordenes.mio_frgconversacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="7">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/mio_icontendero"
                ></ImageView>
            <TextView
                android:id="@+id/mio_edtcontendero"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mio_varstrchatcliente8"
                android:textColor="@color/blackPrimary"
                android:textSize="19dp"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/mio_ctxtconversacion1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:text="Pedido confirmado"
                android:inputType="textPersonName"
                android:background="@drawable/containedbutton_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="7"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/mio_iconrepartidor"
                ></ImageView>

            <TextView
                android:id="@+id/mio_edtconrepartidor"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mio_varstrchatcliente4"
                android:textColor="@color/blackPrimary"
                android:layout_marginLeft="3dp"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/is_ctxtconversacion2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/containedbutton_grey"
                android:ems="10"
                android:text="Estoy en camino"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="7"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/mio_iconcliente"
                ></ImageView>

            <TextView
                android:id="@+id/mio_edtconcliente"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mio_varstrchatcliente2"
                android:textColor="@color/blackPrimary"
                android:layout_marginLeft="3dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/mio_ctxtconversacion3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Estoy a la espera"
                android:background="@drawable/containedbutton_grey"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="7">
            <EditText
                android:id="@+id/is_cedtescribiraqui"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/mio_varstrchatcliente7"
                android:inputType="textPersonName"
                android:background="@drawable/containedbutton_grey"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/mio_iconenviar"
                android:padding="2dp"
                android:layout_marginTop="20dp"> </ImageView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>